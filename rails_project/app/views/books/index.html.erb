<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <h1>Catalogue</h1>
    <div class="col-md-4 col-md-offset-4">
      <form class="searchform group">
        <label for="search-box">
          <span class="fa fa-2x fa-search"></span>
        </label>

        <input type="search" id="search-box" placeholder="Rechercher">
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12" id="liste-books">
      <% @books.order("title asc").each do |book| %>
          <div class="book-catalogue col-lg-2">
            <%=  link_to raw("<img src='#{book.avatar.url()}' class='img-une'>"), book %>
            <h3><%= book.title %></h3>
          </div>

      <% end %>
    </div>
  </div>
</div>



