<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <h1>Catalogue</h1>
    <div class="col-md-4 col-md-offset-4">
      <form class="searchform group">
        <label for="search-box">
          <span class="fa fa-2x fa-search"></span>
        </label>

        <input type="search" id="search-box" placeholder="Rechercher">
      </form>
    </div>
  </div>
  <div class="row" id="liste-books">
      <% i = 0 %>
      <% @books.order("title asc").each do |book| %>
          <% if i<6 %>
          <div class="book-catalogue col-lg-2">
            <%=  link_to raw("<img src='#{book.avatar.url()}' class='img-une'>"), book %>
            <%#= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } #%>
            <h3><%= book.title %></h3>
          </div>
            <% i=i+1 %>
          <% else %>
            </div>
              <div class="row">
                <div class="book-catalogue col-lg-2">
                  <%=  link_to raw("<img src='#{book.avatar.url()}' class='img-une'>"), book %>
                  <%#= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } #%>
                  <h3><%= book.title %></h3>
                </div>
              </div>
              <% i=0 %>
          <% end %>
      <% end %>
      <% if i<6 %>
          <div id="new-book" class="book-catalogue col-lg-2">
            <%=  link_to ("Ajouter un nouveau livre"), new_book_path %>
          </div>
      <% else %>
          <div class="row">
            <div class="book-catalogue col-lg-2">
              <%= link_to raw("<div id='new-book'></div>"), new_book_path %>
              <h3><%=  link_to ("Ajouter un nouveau livre"), new_book_path %></h3>
            </div>
          </div>
      <% end %>
  </div>
</div>



