<%= simple_form_for @book do |f| %>
    <%= f.error_notification %>

    <div class="row form-add-book">
      <% if params[:action] == 'edit' %>
          <div class="col-md-8 left-col">
      <% else %>
          <div class="col-md-4 col-md-offset-2 left-col">
      <% end %>

        <div class="form-group col-md-12">
          <%= f.input :title, label: 'Titre', class: 'form-control' %>
        </div>

        <div class="form-group col-md-12">
          <%= f.label 'Résumé' %>
          <%= f.text_area :text, label: 'Résumé', class: 'form-control', rows: '5' %>
        </div>

        <div class="form-group col-md-12">
          <%= f.input :author, label: 'Auteur', class: 'form-control' %>
        </div>
      </div>


      <% if params[:action] == 'edit' %>
          <div class="col-md-8 right-col">
      <% else %>
          <div class="col-md-4 right-col">
      <% end %>

        <div class="form-group col-md-12">
          <% if @book.date.present? %>
              <%= f.input :date, class: 'form-control datepicker', :value => I18n.localize(@book.date.to_date, :format => :default) %>
          <% else %>
              <%= f.input :date, :class => 'datepicker' %>
          <% end %>
        </div>

        <div class="form-group col-md-12">
          <%= f.label 'Stock' %>
          <%= f.number_field :stock, label: 'Stock', class: 'form-control' %>
        </div>

        <div class="form-group col-md-12">
          <%= f.input :avatar, label: 'Choisir une couverture', as: :file %>
        </div>

        <div class="form-actions col-md-12">
          <%= f.button :submit, 'Ajouter ce livre', class: 'btn btn-primary' %>
          <%=link_to "Revenir au catalogue", books_path, class: 'btn btn-default' %>
        </div>
      </div>
      </div></div>
    </div>

<% end %>

<script type="text/javascript">
    $(document).ready(function(){
        $('.datepicker').datepicker({
            format: "dd MM yyyy",
            language: "fr"
        });
    });
</script>