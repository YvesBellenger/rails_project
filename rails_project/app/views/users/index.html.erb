<p id="notice"><%= notice %></p>

<h1>Liste des utilisateurs</h1>

<div class="row">
  <div class="col-lg-12">
    <table id="liste-reservations">
      <tr>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Email</th>
        <th>Date d'inscription</th>
        <th>Nombre de livres en cours de réservation</th>
        <th>Compte</th>
      </tr>

    <% @users.each do |user| %>
      <tr>
        <td><%= user.prenom %></td>
        <td><%= user.nom %></td>
        <td><%= user.email %></td>
        <td><%= l user.created_at.to_date, :format => :long %></td>
        <td><%= Reservation.where(:user_id => user.id, :rendu => false).count %></td>
        <td><%= link_to 'Voir', user_path(user)%></td>
      </tr>
    <% end %>
</table>

