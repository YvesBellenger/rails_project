<p id="notice"><%= notice %></p>

<p>
  <strong>Nom:</strong>
  <%= @user.nom %>
</p>

<p>
  <strong>Prenom:</strong>
  <%= @user.prenom %>
</p>


<p>
  <strong>Mail:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Date d'inscription:</strong>
  <%= l @user.created_at.to_date, :format => :long, locale: :fr %>
</p>

<div class="row">
  <% @reservations.where(:user_id => @user.id, :rendu => false).each do |book_reservation| %>
    <div class="book-catalogue col-lg-2">
      <%=  link_to raw("<img src='#{book_reservation.book.avatar.url()}' class='img-une'>"), book_reservation.book %>
    <h3><%= book_reservation.book.title %></h3>
    </div>
  <% end %>
</div>

<div class="row">
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</div>