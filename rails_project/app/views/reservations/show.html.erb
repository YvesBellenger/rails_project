<%= flash_messages %>

<h2> Statut de la réservation </h2>
<h3> <%= @book.title %></h3>

  <%=  link_to raw("<img src='#{@book.avatar.url()}' class='img-une'>"), @book %>

<p>
  <strong>Début de la réservation</strong>
  <%= l @reservation.date_debut.to_date, :format => :long %>
</p>

<p>
  <strong>Réservé jusqu'au</strong>
  <%= l @reservation.date_fin.to_date, :format => :long %>
</p>

<b>Réservé par : </b><%= @reservation.user.prenom %> <%= @reservation.user.nom %> <br><br>
<b>Courriel de contact : </b> <%= @reservation.user.email %> <br><br>

<% if can? :manange, :all %>
    <b>Statut rendu : </b> <% if @reservation.rendu %> Rendu <% else %> Non rendu <% end %> <br><br>
<% end %>
<% if Date.today >= @reservation.date_fin %>
    <h3> Livre à rendre au plus vite </h3>
<% end %>

<% if @reservation.user = current_user and !@reservation.rendu %>
  <%= link_to 'Rendre le livre', book_reservation_path(@book, @reservation), method: :livre_rendu, class: 'btn btn-default' %><br><br>
<% end %>

<%= link_to 'Modifier la réservation', edit_book_reservation_path(@book, @reservation), class: 'btn btn-default' %> <br>
<%= link_to 'Fiche du livre', book_path(@book), class: 'btn btn-default' %>
